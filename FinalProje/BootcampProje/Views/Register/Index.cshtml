<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Kayıt Sayfası</h3>
        <div class="inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                @using (Html.BeginForm("Index", "Register", FormMethod.Post))
                {
                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom01"><b>Adı</b></label>
                            @Html.TextBoxFor(x=>x.MemberName, new{@class ="form-control"})
                            @Html.ValidationMessageFor(x=>x.MemberName,"", new{@class ="form-danger"})
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom02"><b>Soyadı</b></label>
                            @Html.TextBoxFor(x=>x.MemberSurname, new{@class ="form-control"})
                            @Html.ValidationMessageFor(x=>x.MemberSurname,"", new{@class ="form-danger"})
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom03"><b>E-Posta</b></label>
                            @Html.TextBoxFor(x=>x.MemberMail, new{@class ="form-control"})
                            @Html.ValidationMessageFor(x=>x.MemberMail,"", new{@class ="form-danger"})
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword1 mb-2"><b>Şifre</b></label>
                            @Html.TextBoxFor(x=>x.MemberPassword, new{@class ="form-control"})
                            @Html.ValidationMessageFor(x=>x.MemberPassword,"", new{@class ="form-danger"})
                        </div>
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword2 mb-2"><b>Şifreyi Doğrula</b></label>
                            <input type="password" class="form-control" id="password2">
                        </div>

                    </div>
                    <button type="submit" class="btn btn-primary submit mb-4">Kaydol</button>
                }

            </div>
        </div>
    </div>
</section>

