    <link href="~/Pages/css/bootstrap.css" rel='stylesheet' type='text/css' />
    <link href="~/Pages/single.css" rel='stylesheet' type='text/css' />
    <link href="~/Pages/css/style.css" rel='stylesheet' type='text/css' />
    <link href="~/Pages/css/fontawesome-all.css" rel="stylesheet">
